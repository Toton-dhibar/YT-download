{
  "version": 2,
  "routes": [
    {
      "src": "/xhttp/(.*)",
      "dest": "/api/xhttp?path=$1"
    },
    {
      "src": "/split/(.*)", 
      "dest": "/api/split?path=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/xhttp?path=$1"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
}
